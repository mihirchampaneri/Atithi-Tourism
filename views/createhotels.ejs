<%- include('./partials/header') %> 

<% if(success.length>0){ %>
  <div class="absolute z-[1] top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
      <span class="inline-block mt-1 mb-1 text-white">
          <%- success %>
      </span>
  </div>
  <% } %> 

<div class="min-h-screen flex flex-col">
  <div class=" bg-slate-100 bg-cover px-10 py-20 flex flex-grow">
    <%- include('./partials/sidebar') %>
    <main class="w-5/6 bg-white p-8 shadow ml-4 rounded-md">
      <h2 class="text-2xl font-bold mb-4">Create <span class="text-blue-500">New Hotel</span></h2>
      <form
        autocomplete="off"
        action="/hotels/create"
        method="post"
        enctype="multipart/form-data"
      >
        <div class="mb-6">
          <h3 class="text-lg font-semibold mb-2">Hotel Details</h3>
          <div class="mb-4">
            <div class="rounded-md border border-blue-500 bg-gray-50 p-2 shadow-md w-36 flex flex-col items-center">
              <label for="upload" class="flex flex-col items-center gap-2 cursor-pointer">
                <!-- Image Preview (Initially Hidden) -->
                <img id="preview" class="w-24 h-24 object-cover rounded-md hidden" alt="Image Preview" />
            
                <!-- Upload Icon -->
                <svg id="upload-icon" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 fill-white stroke-blue-500" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 13h6m-3-3v6m5 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                
                <span id="upload-text" class="text-gray-600 text-sm font-medium">Upload Image</span>
              </label>
              
              <!-- Hidden File Input -->
              <input name="image" id="upload" type="file" class="hidden" accept="image/*" />
            </div>
            <!-- <label class="block mb-2 font-medium">Hotel Image</label>
            <input
              name="image"
              type="file"
              class="py-2 px-4 rounded"
              value="Select File"
            /> -->
          </div>
          <div class="grid grid-cols-2 gap-4">
            <input
              name="name"
              type="text"
              placeholder="Hotel Name"
              class="border p-2 rounded w-full"
              required
            />
            <input
              name="price"
              type="text"
              placeholder="Hotel Price"
              class="border p-2 rounded w-full"
              required
            />
            <input
              name="discount"
              type="text"
              placeholder="Hotel Discount"
              class="border p-2 rounded w-full"
              required
            />
            <input
              name="rating"
              type="text"
              placeholder="Rating"
              class="border p-2 rounded w-full"
              required
            />
            <input
              name="facility1"
              type="text"
              placeholder="Enter facility 1"
              class="border p-2 rounded w-full"
              required
            />
            <input
              name="facility2"
              type="text"
              placeholder="Enter facility 2"
              class="border p-2 rounded w-full"
              required
            />
            <input
              name="facility3"
              type="text"
              placeholder="Enter facility 3"
              class="border p-2 rounded w-full"
              required
            />
          </div>
        </div>

        <div>
          <h3 class="text-lg font-semibold mb-2">Panel Details</h3>
          <div class="grid grid-cols-2 gap-4">
            <input
              name="bgcolor"
              type="text"
              placeholder="Background Color"
              class="border p-2 rounded w-full"
              required
            />
            <input
              name="panelcolor"
              type="text"
              placeholder="Panel Color"
              class="border p-2 rounded w-full"
              required
            />
            <input
              name="textcolor"
              type="text"
              placeholder="Text Color"
              class="border p-2 rounded w-full"
              required
            />
          </div>
        </div>
        <input
          class="px-5 py-2 rounded mt-3 bg-blue-500 text-white hover:bg-blue-700"
          type="submit"
          value="Create Newhotel"
        />
      </form>
    </main>
  </div>
</div>
<%- include('./partials/footer') %>

<script src="/js/uploadimg.js"></script>
