                    <path
                      stroke-width="4"
                      stroke="white"
                      d="M12 6L12 29"
                    ></path>
                    <path stroke-width="4" stroke="white" d="M21 6V29"></path>
                  </svg>
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </main>
  </div>
</div>

<%- include('./partials/footer') %>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

